{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "strict": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "@ui/*": ["src/ui/*"],
      "@ui": ["src/ui/"],
      "@img/*": ["src/img/*"],
      "@img": ["src/img/"],
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  }
}
